@model ExpeditionHelper_SOL.Models.TB_INCOTERM

<div class="container body-content" style="background-color:white;border-radius:5px;">
    <br /><br />
    <h3>@ExpeditionHelper_SOL.Resources.Views.Incoterm.Delete.Titre</h3>
    <div>
        <hr />
        <a href="@Url.Action("Index" , "Incoterm")" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> @ExpeditionHelper_SOL.Resources.Views.Incoterm.Delete.BtnRetour </a>
        <br /><br />
              <dl class="dl-horizontal">
                  <dt>
                      @ExpeditionHelper_SOL.Resources.Views.Incoterm.Delete.Nom
                  </dt>

                  <dd>
                      @ViewBag.NomIncoterm
                  </dd>

                  <dt>
                      @ExpeditionHelper_SOL.Resources.Views.Incoterm.Delete.Description
                  </dt>

                  <dd>
                      @ViewBag.DescriptionIncoterm
                  </dd>
              </dl>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" data-toggle="modal" data-target="#ModalStep" data-backdrop="static" data-keyboard="false" value="@ExpeditionHelper_SOL.Resources.Views.Incoterm.Delete.BtnSupprimer" class="btn btn-danger" />
            </div>
        </div>
    </div>
</div>

@* Modal *@
<div class="modal fade" id="ModalStep" role="dialog">
    <div class="modal-dialog modal-lg">
        <div style="margin-top:25%;"></div>
        <div class="modal-content" style="text-align:center;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:darkred;">@ExpeditionHelper_SOL.Resources.Views.Incoterm.Delete.ModalDeleteTitre</h4>
            </div>
            <div class="modal-body" style="text-align:center;">
                <div id="TableBodyStep">
                    <table id="BlockBodyLink" class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <td><label> # </label></td>
                                <td><label> @ExpeditionHelper_SOL.Resources.Views.EtapeLecture.Index.Explication </label></td>
                                <td><label> @ExpeditionHelper_SOL.Resources.Views.EtapeLecture.Index.Incoterm </label></td>
                            </tr>
                        </thead>
                        <tbody id="trtable">
                            @foreach (var item in ViewBag.Etape)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Texte</td>
                                    <td>@ViewBag.NomIncoterm</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer" style="text-align:center;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="@ExpeditionHelper_SOL.Resources.Views.Incoterm.Delete.BtnSupprimer" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>

