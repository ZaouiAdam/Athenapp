@model PagedList.IPagedList<ExpeditionHelper_SOL.Models.TB_INCOTERM>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index Incoterm";
}

<div class="container body-content" style="background-color:white;border-radius:5px;">
    <br /><br />
    <h2>@ExpeditionHelper_SOL.Resources.Views.Incoterm.Index.Titre</h2>
    <a href="@Url.Action("Create", "Incoterm")" class="btn btn-primary"> <span class="fa fa-plus" aria-hidden="true"></span> @ExpeditionHelper_SOL.Resources.Views.Incoterm.Index.BtnAdd </a> <br /><br /><br />

    <div class="row">
        <div class="col-lg-3">
            @using (Html.BeginForm("Index", "Incoterm", FormMethod.Get, new { @class = "form-inline" }))
            {
                <p>
                    @ExpeditionHelper_SOL.Resources.Views.Shared._Layout.SearchByName <br /> @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control text-box" })
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                </p>
            }
        </div>
    </div>

    <table class="table table-bordered">
        <tr>
            <th>
                @ExpeditionHelper_SOL.Resources.Views.Incoterm.Index.Nom
            </th>
            <th>
                @ExpeditionHelper_SOL.Resources.Views.Incoterm.Index.Description
            </th>
            <th>
                @ExpeditionHelper_SOL.Resources.Views.Incoterm.Index.Action
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a href="@Url.Action("Edit" , "Incoterm" , new { id = item.Id })" class="btn btn-primary"> <i class="fa fa-pencil"></i> </a>
                    <a href="@Url.Action("Delete" , "Incoterm" , new { id = item.Id })" class="btn btn-danger"> <i class="fa fa-trash"></i> </a>
                </td>
            </tr>
        }

    </table>

    @ExpeditionHelper_SOL.Resources.Views.Shared._Layout.Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>

