@model PagedList.IPagedList<ExpeditionHelper_SOL.Models.TB_CLIENT>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index Client";
}

<div class="container body-content" style="background-color:white;border-radius:5px;">
    <br /><br />
    <h2> @ExpeditionHelper_SOL.Resources.Views.Client.Index.Titre </h2>
    <a href="@Url.Action("Create", "Client")" class="btn btn-primary"> <span class="fa fa-plus" aria-hidden="true"></span> @ExpeditionHelper_SOL.Resources.Views.Client.Index.BtnAdd </a> <br /><br /><br />

    <div class="row">
        <div class="col-lg-3">
            @using (Html.BeginForm("Index", "Client", FormMethod.Get, new { @class = "form-inline" }))
            {
                <p>
                    @ExpeditionHelper_SOL.Resources.Views.Shared._Layout.SearchByName <br /> @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control text-box" })
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                </p>
            }
        </div>
    </div>

    <table class="table table-bordered">
        <tr>
            <th>
                @ExpeditionHelper_SOL.Resources.Views.Client.Index.Code
            </th>
            <th>
                @ExpeditionHelper_SOL.Resources.Views.Client.Index.Nom
            </th>
            <th>
                @ExpeditionHelper_SOL.Resources.Views.Client.Index.Action
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td id="TdButtonCollapse_@item.Id" style="text-align:center;">

                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    <a href="@Url.Action("Edit" , "Client" , new { id = item.Id })" class="btn btn-primary"> <i class="fa fa-pencil"></i> </a>
                    <a href="@Url.Action("Delete" , "Client" , new { id = item.Id })" class="btn btn-danger"> <i class="fa fa-trash"></i> </a>
                    <button class="btn btn-info" id="ButtonCollapse_@item.Id" data-toggle="collapse" data-target="#@item.Code" onclick="ListAdresse(@item.Id);"> <i class="fa fa-map-marker" aria-hidden="true"></i> </button>
                </td>
            </tr>
            <tr id="@item.Code" class="collapse">
                <td colspan="1">
                    <button class="btn btn-success" id="ButtonCollapse_@item.Id" data-toggle="modal" data-target="#ModalAddAdresse" data-backdrop="static" data-keyboard="false" onclick="ModalAddAdresse(@item.Id);" style="margin-top:50%;text-align:center;"><i class="fa fa-plus-square" aria-hidden="true"></i></button>

                </td>
                <td colspan="2" id="TdCollapse_@item.Id"></td>
            </tr>
        }

    </table>

    @ExpeditionHelper_SOL.Resources.Views.Shared._Layout.Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>

@* Modal Delete Adresse *@
<div class="modal fade" id="ModalDeleteAdresse" role="dialog">
    <div class="modal-dialog modal-lg">
        <div style="margin-top:25%;"></div>
        <div class="modal-content" style="text-align:center;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@ExpeditionHelper_SOL.Resources.Views.Client.Index.TitleDelete</h4>
            </div>
            <div class="modal-body" style="text-align:center;">
                @* Contenu de la fonction DeleteAddress *@
                <div id="TableBodyDeleteAdresse">
                </div>
            </div>
        </div>
    </div>
</div>

@* Modal Add Adresse *@
<div class="modal fade" id="ModalAddAdresse" role="dialog">
    <div class="modal-dialog modal-lg">
        <div style="margin-top:25%;"></div>
        <div class="modal-content" style="text-align:center;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@ExpeditionHelper_SOL.Resources.Views.Client.Index.TitleAdd</h4>
            </div>
            <div class="modal-body" style="text-align:center;">
                @* Contenu de a fonction AddAddress *@
                <div id="TableBodyAddAdresse">
                </div>
            </div>
        </div>
    </div>
</div>

@* Modal Edit Adresse *@
<div class="modal fade" id="ModalEditAdresse" role="dialog">
    <div class="modal-dialog modal-lg">
        <div style="margin-top:25%;"></div>
        <div class="modal-content" style="text-align:center;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@ExpeditionHelper_SOL.Resources.Views.Client.Index.TitleEdit</h4>
            </div>
            <div class="modal-body" style="text-align:center;">
                @* Contenu de a fonction EditAddress *@
                <div id="TableBodyEditAdresse">
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    function decode(str) {
        var textArea = document.createElement('textarea');
        textArea.innerHTML = str;
        return textArea.value;
    }

    // List Group Select
    function ListAdresse(IdClient) {

        $.ajax({
            url: 'Client/ListAdresse',
            type: "POST",
            data: { IdClient: IdClient},
            success: successFunc,
            error: errorFunc
        });

        function successFunc(data, status) {
            $('#TableCollapse_' + IdClient).remove();
            $('#TdCollapse_' + IdClient).append('<table class="table table-striped" id="TableCollapse_' + IdClient + '"><tr><th>' +
                '@ExpeditionHelper_SOL.Resources.Views.Client.Index.Code Adresse</th><th>' +
                '@ExpeditionHelper_SOL.Resources.Views.Client.Index.Adresse</th><th>' +
                '@ExpeditionHelper_SOL.Resources.Views.Client.Index.Groupe</th><th>' +
                '@ExpeditionHelper_SOL.Resources.Views.Client.Index.Action</th></tr></table>');
            var iNom = 0;
            $(data).each(function (Index, emp) {
                var ArrayAdresse = emp.Value.split('AdresseValue');
                iNom++;
                $('#TableCollapse_' + IdClient).append('<tr>' +
                    '<td>' + ArrayAdresse[2] + '</td>' +
                    '<td>' + ArrayAdresse[1] + '</td>' +
                    '<td>' + ArrayAdresse[3] + '</td>' +
                    '<td>' +
                    '<button class="btn btn-primary" data-toggle="modal" data-target="#ModalEditAdresse" data-backdrop="static" data-keyboard="false" onclick="ModalEditAdresse(' + ArrayAdresse[0] + ');"> <i class="fa fa-pencil"></i></button>' +
                    '<button class="btn btn-danger"  data-toggle="modal" data-target="#ModalDeleteAdresse" data-backdrop="static" data-keyboard="false" onclick="ModalDeleteAdresse(' + ArrayAdresse[0] + ');"> <i class="fa fa-trash"></i></button>' +
                    '</td>' +
                    '</tr>');
            });
        }

        function errorFunc() {
            $("body").overhang({
                type: "Error",
                message: decode("@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.ErrorFunction"),
            });
        }
    }

    // Modal Add Adresse
    function ModalAddAdresse(IdClient) {
        $('#BlockBodyAddAdresse').remove();
        $('#TableBodyAddAdresse').append('<div id="BlockBodyAddAdresse">' +
            '<div class="modal-body" style="text-align:center;">' +
            '<input type="text" id="Nom_Add_Adresse" class="form-control" placeholder="@ExpeditionHelper_SOL.Resources.Views.Client.Index.Adresse..."></br>' +
            '<input type="text" id="Code_Add_Adresse" class="form-control" placeholder="@ExpeditionHelper_SOL.Resources.Views.Client.Index.Codeadresse..."></br>' +
            '<select class="form-control" id="SelectGroup"><option value="0">@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.SelectItemTitle</option></select></br>' +
            '</div>' +
            '<div class="modal-footer" style="text-align:center;"><button class="btn btn-success" onclick="AddAdresse(' + IdClient + ');">@ExpeditionHelper_SOL.Resources.Views.Client.Index.Sauvegarder</button></div>' +
        '</div>');
        ListGroup(0);
    }

    // Add Adresse
    function AddAdresse(IdClient) {
        var Nom = document.getElementById('Nom_Add_Adresse').value;
        var CodeAdresse = document.getElementById('Code_Add_Adresse').value;
        var SelectGroup = document.getElementById('SelectGroup').value;

        $.ajax({
            url: 'Client/AddAdresse',
            type: "POST",
            data: { Nom: Nom, CodeAdresse: CodeAdresse, IdClient: IdClient, SelectGroup: SelectGroup },
            success: successFunc,
            error: errorFunc
        });

        function successFunc(data, status) {
            if (data == "Success") {
                $("body").overhang({
                    type: "success",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.AddAddressSuccess"),
                });
                ListAdresse(IdClient);
                document.getElementById("Nom_Add_Adresse").value = "";
                document.getElementById("Nom_Add_Adresse").style.border = "1px solid #CCCCCC";
                document.getElementById("Code_Add_Adresse").value = "";
                document.getElementById("Code_Add_Adresse").style.border = "1px solid #CCCCCC";
                document.getElementById("SelectGroup").style.border = "1px solid #CCCCCC";
                $('.modal').modal('hide').data('bs.modal', null);
            }
            if (data == "ErrorNomEmpty") {
                $("body").overhang({
                    type: "Warning",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.EmptyText"),
                });
                document.getElementById("Nom_Add_Adresse").style.border = "1px solid red";
            }
            if (data == "ErrorCodeAdresseEmpty") {
                $("body").overhang({
                    type: "Warning",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.EmptyAddressCode"),
                });
                document.getElementById("Code_Add_Adresse").style.border = "1px solid red";
            }
            if (data == "DoublonCodeAdresse") {
                $("body").overhang({
                    type: "Warning",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.AddressCodeExisting"),
                });
                document.getElementById("Code_Add_Adresse").style.border = "1px solid orange";
            }
            if (data == "ErrorSelectGroupEmpty") {
                $("body").overhang({
                    type: "Warning",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.EmptyGroup"),
                });
                document.getElementById("SelectGroup").style.border = "1px solid orange";
            }
            if (data == "Error") {
                $("body").overhang({
                    type: "Error",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.FailAddAddress"),
                });
            }
            ListAdresse(IdClient);
        }

        function errorFunc() {
            $("body").overhang({
                type: "Error",
                message: decode("@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.ErrorFunction"),
            });
        }
    }

    // Modal Delete Group
    function ModalEditAdresse(IdAdresse) {

        $.ajax({
            url: 'Client/ModalEditAdresse',
            type: "POST",
            data: { IdAdresse: IdAdresse },
            success: successFunc,
            error: errorFunc
        });

        function successFunc(data, status) {
            $('#BlockBodyEditAdresse').remove();
            var ArrayAdresse = data.split('AdresseValue');

            $('#TableBodyEditAdresse').append('<div id="BlockBodyEditAdresse">' +
            '<div class="modal-body" style="text-align:center;">' +
                '<input type="text" id="Nom_Edit_Adresse" class="form-control" placeholder="@ExpeditionHelper_SOL.Resources.Views.Client.Index.Adresse..." value="' + ArrayAdresse[1] + '"></br>' +
                '<input type="text" id="Code_Edit_Adresse" class="form-control" placeholder="@ExpeditionHelper_SOL.Resources.Views.Client.Index.Codeadresse..." value="' + ArrayAdresse[2] + '"></br>' +
                '<select class="form-control" id="SelectGroup"><option value="0">@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.SelectItemTitle</option></select></br>' +
            '</div>' +
                '<div class="modal-footer" style="text-align:center;"><button class="btn btn-warning" onclick="EditAdresse(' + ArrayAdresse[0] + ',' + ArrayAdresse[3] + ');">@ExpeditionHelper_SOL.Resources.Views.Client.Index.Sauvegarder</button></div>' +
                '</div>');
            ListGroup(ArrayAdresse[4]);
            
        }

        function errorFunc() {
            $("body").overhang({
                type: "Error",
                message: decode("@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.ErrorFunction"),
            });
        }
    }

    // Add Adresse
    function EditAdresse(IdAdresse,IdClient) {
        var Nom = document.getElementById('Nom_Edit_Adresse').value;
        var CodeAdresse = document.getElementById('Code_Edit_Adresse').value;
        var SelectGroup = document.getElementById('SelectGroup').value;

        $.ajax({
            url: 'Client/EditAdresse',
            type: "POST",
            data: { Nom: Nom, CodeAdresse: CodeAdresse, IdAdresse: IdAdresse, IdClient: IdClient, SelectGroup: SelectGroup },
            success: successFunc,
            error: errorFunc
        });

        function successFunc(data, status) {
            if (data == "Success") {
                $("body").overhang({
                    type: "success",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.EditAddressSuccess"),
                });
                ListAdresse(IdClient);
                document.getElementById("Nom_Edit_Adresse").value = "";
                document.getElementById("Nom_Edit_Adresse").style.border = "1px solid #CCCCCC";
                document.getElementById("Code_Edit_Adresse").value = "";
                document.getElementById("Code_Edit_Adresse").style.border = "1px solid #CCCCCC";
                document.getElementById("SelectGroup").style.border = "1px solid #CCCCCC";
                $('.modal').modal('hide').data('bs.modal', null);
            }
            if (data == "ErrorNomEmpty") {
                $("body").overhang({
                    type: "Warning",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.EmptyText"),
                });
                document.getElementById("Nom_Edit_Adresse").style.border = "1px solid red";
            }
            if (data == "ErrorCodeAdresseEmpty") {
                $("body").overhang({
                    type: "Warning",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.EmptyAddressCode"),
                });
                document.getElementById("Code_Edit_Adresse").style.border = "1px solid red";
            }
            if (data == "DoublonCodeAdresse") {
                $("body").overhang({
                    type: "Warning",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.AddressCodeExisting"),
                });
                document.getElementById("Code_Edit_Adresse").style.border = "1px solid orange";
            }
            if (data == "ErrorSelectGroupEmpty") {
                $("body").overhang({
                    type: "Warning",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.EmptyGroup"),
                });
                document.getElementById("SelectGroup").style.border = "1px solid orange";
            }
            if (data == "Error") {
                $("body").overhang({
                    type: "Error",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.FailEditAddress"),
                });
            }
            ListAdresse(IdClient);
        }

        function errorFunc() {
            $("body").overhang({
                type: "Error",
                message: decode("@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.ErrorFunction"),
            });
        }
    }

    // Modal Delete Group
    function ModalDeleteAdresse(IdAdresse) {

        $.ajax({
            url: 'Client/ModalDeleteAdresse',
            type: "POST",
            data: { IdAdresse: IdAdresse },
            success: successFunc,
            error: errorFunc
        });

        function successFunc(data, status) {
            var ArrayAdresse = data.split('AdresseValue');
            $('#BlockBodyDeleteAdresse').remove();
            $('#TableBodyDeleteAdresse').append('<div id="BlockBodyDeleteAdresse">' +
                '<div class="modal-body" style="text-align:center;">@ExpeditionHelper_SOL.Resources.Views.Client.Index.MsgDeletePart1 "<strong>' + ArrayAdresse[1] + '</strong>"@ExpeditionHelper_SOL.Resources.Views.Client.Index.MsgDeletePart2 <strong style="color:darkred;">@ExpeditionHelper_SOL.Resources.Views.Client.Index.MsgDeletePart3</strong> ! </div>' +
                '<div class="modal-footer" style="text-align:center;"><button class="btn btn-danger" onclick="DeleteAdresse(' + ArrayAdresse[0] + ',' + ArrayAdresse[2] + ');">@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.ModalDeleteStepBtnDelete</button></div>' +
                '</div>');
        }

        function errorFunc() {
            $("body").overhang({
                type: "Error",
                message: decode("@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.ErrorFunction"),
            });
        }
    }

    // Delete Group
    function DeleteAdresse(IdAdresse,IdClient) {

        $.ajax({
            url: 'Client/DeleteAdresse',
            type: "POST",
            data: { IdAdresse: IdAdresse },
            success: successFunc,
            error: errorFunc
        });

        function successFunc(data, status) {
            if (data == "Success") {
                $("body").overhang({
                    type: "success",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.DeleteAddressSuccess"),
                });
                ListAdresse(IdClient);
                $('.modal').modal('hide').data('bs.modal', null);
            }
            if (data == "Error") {
                $("body").overhang({
                    type: "Error",
                    message: decode("@ExpeditionHelper_SOL.Resources.Views.Client.Index.FailDeleteAddress"),
                });
            }
            ListAdresse(IdClient);
        }

        function errorFunc() {
            $("body").overhang({
                type: "Error",
                message: decode("@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.ErrorFunction"),
            });
        }
    }

    // List Group Select
    function ListGroup(IdIncoterm) {

        $.ajax({
            url: 'Client/ListGroup',
            type: "POST",
            success: successFunc,
            error: errorFunc
        });


        function successFunc(data, status) {
            var iNom = 0;
            $(data).each(function (Index, emp) {
                var ArrayGroup = emp.Value.split('/');
                iNom++;
                if (IdIncoterm == ArrayGroup[0]) {
                    $('#SelectGroup').append('<option value="' + ArrayGroup[0] + '" id="NewGroup' + iNom + '" selected>' + ArrayGroup[1] + '</option>');
                } else {
                    $('#SelectGroup').append('<option value="' + ArrayGroup[0] + '" id="NewGroup' + iNom + '">' + ArrayGroup[1] + '</option>');
                }
            });
        }

        function errorFunc() {
            $("body").overhang({
                type: "Error",
                message: decode("@ExpeditionHelper_SOL.Resources.Views.EtapeDefaut.Index.ErrorFunction"),
            });
        }
    }
</script>

