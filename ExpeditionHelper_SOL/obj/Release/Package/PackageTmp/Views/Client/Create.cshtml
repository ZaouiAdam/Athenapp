@model ExpeditionHelper_SOL.Models.TB_CLIENT

<div class="container body-content" style="background-color:white;border-radius:5px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <br />
            <br />
            <h4>@ExpeditionHelper_SOL.Resources.Views.Client.Create.Titre</h4>
            <hr />
            <a href="@Url.Action("Index" , "Client")" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> @ExpeditionHelper_SOL.Resources.Views.Client.Create.BtnRetour </a>
            <br /><br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                  <div class="form-group">
                      <label style="color:darkred;">@ViewBag.Msg</label><br />
                      <label class="control-label col-md-2">@ExpeditionHelper_SOL.Resources.Views.Client.Create.Code</label>
                      <div class="col-md-10">
                          @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                          @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                      </div>
                  </div>

            <div class="form-group">
                <label class="control-label col-md-2">@ExpeditionHelper_SOL.Resources.Views.Client.Create.Nom</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@ExpeditionHelper_SOL.Resources.Views.Client.Create.BtnValider" class="btn btn-success" />
                </div>
            </div>
        </div>
    }

</div>
