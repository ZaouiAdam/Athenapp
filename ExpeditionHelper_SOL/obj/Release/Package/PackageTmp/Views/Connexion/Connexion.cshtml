@model ExpeditionHelper_SOL.Models.User

@{
    ViewBag.Title = ExpeditionHelper_SOL.Resources.Views.Connexion.Connexion.Title;
}

<br />
<br />


<div class="container body-content" style="background-color:white;border-radius:5px;">

    <h2>@ExpeditionHelper_SOL.Resources.Views.Connexion.Connexion.Title</h2>

    <br />

    @if (ViewBag.ErrorInfo != null && ViewBag.ErrorInfo.Length > 0)
    {
        <div class="alert alert-danger" role="alert">
            <p style="text-align:center;white-space: pre-line">@ViewBag.ErrorInfo</p>
        </div>
    }


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-2">
                    <label>Compte Windows</label>
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.login, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.login, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@ExpeditionHelper_SOL.Resources.Views.Connexion.Connexion.Valider" class="btn btn-default" />
                </div>
            </div>

            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h5>Veuillez saisir les identifiants avec lesquels vous vous connectez à votre compte Windows.</h5>
                </div>
            </div>
            @*<label> @ViewBag.WindowsId </label>*@

        </div>

    }
</div>