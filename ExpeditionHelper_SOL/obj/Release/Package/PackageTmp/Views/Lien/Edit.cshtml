@model ExpeditionHelper_SOL.Models.TB_LIEN


<div class="container body-content" style="background-color:white;border-radius:5px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br /><br />
        <h4>@ExpeditionHelper_SOL.Resources.Views.Lien.Edit.Titre <label>@Html.DisplayFor(model => model.Nom)</label></h4>
        <hr />
        <a href="@Url.Action("Index" , "Lien")" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> @ExpeditionHelper_SOL.Resources.Views.Lien.Edit.BtnRetour </a>
        <br /><br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2">@ExpeditionHelper_SOL.Resources.Views.Lien.Create.Nom</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">@ExpeditionHelper_SOL.Resources.Views.Lien.Create.Url</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-2">
                <select name="UrlSpe" class="form-control">
                    <option value="Link">Lien</option>
                    <option value="Mail">E-Mail</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@ExpeditionHelper_SOL.Resources.Views.Lien.Edit.BtnValider" class="btn btn-success" />
            </div>
        </div>
    </div>
    }

</div>
