<script>

    function StepSwitch() {
        if (document.getElementById("CheckboxDefaut").checked) {
            document.getElementById("StepDefaut1").style.visibility = "hidden";
            document.getElementById("StepDefaut1").style.display = "none";
            document.getElementById("StepDefaut2").style.visibility = "hidden";
            document.getElementById("StepDefaut2").style.display = "none";
            document.getElementById("StepDefaut3").style.visibility = "hidden";
            document.getElementById("StepDefaut3").style.display = "none";
            document.getElementById("StepDefaut4").style.visibility = "hidden";
            document.getElementById("StepDefaut4").style.display = "none";
        } else {
            document.getElementById("StepDefaut1").style.visibility = "visible";
            document.getElementById("StepDefaut1").style.display = "table-row";
            document.getElementById("StepDefaut2").style.visibility = "visible";
            document.getElementById("StepDefaut2").style.display = "table-row";
            document.getElementById("StepDefaut3").style.visibility = "visible";
            document.getElementById("StepDefaut3").style.display = "table-row";
            document.getElementById("StepDefaut4").style.visibility = "visible";
            document.getElementById("StepDefaut4").style.display = "table-row";
        }
        if (document.getElementById("IncotermSelect").value != "0") {
            switch (document.getElementById("IncotermSelect").value) {
                case 'FCA':
                    document.getElementById("StepFCA").style.visibility = "visible";
                    document.getElementById("StepFCA").style.display = "table-row";
                    document.getElementById("StepDAP").style.visibility = "hidden";
                    document.getElementById("StepDAP").style.display = "none";
                    break;
                case 'DAP':
                    document.getElementById("StepDAP").style.visibility = "visible";
                    document.getElementById("StepDAP").style.display = "table-row";
                    document.getElementById("StepFCA").style.visibility = "hidden";
                    document.getElementById("StepFCA").style.display = "none";
                    break;
            }
        } else {
            document.getElementById("StepFCA").style.visibility = "hidden";
            document.getElementById("StepFCA").style.display = "none";
            document.getElementById("StepDAP").style.visibility = "hidden";
            document.getElementById("StepDAP").style.display = "none";
        }
    }
    function ChoixClient() {
        if (document.getElementById("CodeClientSelect").value != "0") {
            document.getElementById("BlockNomClientSelect").style.visibility = "visible";
            document.getElementById("BlockNomClientSelect").style.display = "block";
            document.getElementById("BLClient").disabled = true;
            document.getElementById("NomClientSelect").disabled = false;
            if (document.getElementById("NomClientSelect").value != "0") {
                document.getElementById("NoneClientSelect").style.visibility = "hidden";
                document.getElementById("NoneClientSelect").style.display = "none";
                document.getElementById("BlockClientStep").style.visibility = "visible";
                document.getElementById("BlockClientStep").style.display = "block";
            }
            if (document.getElementById("NomClientSelect").value == "0") {
                document.getElementById("NoneClientSelect").style.visibility = "visible";
                document.getElementById("NoneClientSelect").style.display = "block";
                document.getElementById("BlockClientStep").style.visibility = "hidden";
                document.getElementById("BlockClientStep").style.display = "none";
            }
        } else if (document.getElementById("BLClient").value != "") {
            document.getElementById("CodeClientSelect").disabled = true;
            document.getElementById("NomClientSelect").disabled = true;
            document.getElementById("BlockClientStep").style.visibility = "visible";
            document.getElementById("BlockClientStep").style.display = "block";
            document.getElementById("NoneClientSelect").style.visibility = "hidden";
            document.getElementById("NoneClientSelect").style.display = "none";
        } else {
            document.getElementById("BLClient").disabled = false;
            document.getElementById("CodeClientSelect").disabled = false;
            document.getElementById("NomClientSelect").disabled = true;
            document.getElementById("NoneClientSelect").style.visibility = "visible";
            document.getElementById("NoneClientSelect").style.display = "block";
            document.getElementById("BlockClientStep").style.visibility = "hidden";
            document.getElementById("BlockClientStep").style.display = "none";
        }
    }

</script>
